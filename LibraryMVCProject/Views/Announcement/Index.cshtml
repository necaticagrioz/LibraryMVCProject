@using LibraryMVCProject.Models.Entity
@model List<TblDuyuru>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<br />
<h2>Duyuru</h2>
<table class="table table-bordered">
    <tr style="background-color: rgb(252, 178, 22)">
        <th>Duyuru No</th>
        <th>Başlık</th>
        <th>İçerik</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>İçerik</th>
    </tr>
    @foreach (var dyr in Model)
    {
        <tr>
            <td>@dyr.ID</td>
            <td>@dyr.Kategori</td>
            <td>@dyr.Icerik</td>
            <td>@Convert.ToDateTime(dyr.Tarih).ToString("dd/MM/yyyy")</td>

            <td><a href="/Announcement/DuyuruSil/@dyr.ID" class="btn btn-danger" style="width:100%">Sil</a></td>
            <td><a href="/Announcement/DuyuruDetay/@dyr.ID" class="btn btn-primary" style="width:100%">Detay</a></td>
        </tr>
    }
</table>
<a href="/Announcement/YeniDuyuru/" class="btn btn-success">Yeni Duyuru</a>
