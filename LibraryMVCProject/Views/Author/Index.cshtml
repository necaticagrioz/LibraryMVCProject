@using LibraryMVCProject.Models.Entity
@model List<TblYazar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<br />
<h2>Yazarlar</h2>

<table class="table table-bordered">
    <tr style="background-color: rgb(252, 178, 22)">
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Yazar Bilgileri</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Kitapları</th>
    </tr>
    @foreach (var y in Model)
    {
        <tr>
            <td>@y.ID</td>
            <td>@y.Ad</td>
            <td>@y.Soyad</td>
            <td>@y.Detay</td>
            <td>@Html.ActionLink("Sil", "YazarSil", new { id = y.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musunuz ?')" })</td>
            <td><a href="/Author/YazarGetir/@y.ID" class="btn btn-primary">Güncelle</a></td>
            <td><a href="/Author/YazarKitaplar/@y.ID" class="btn btn-success">Kitaplar</a></td>
        </tr>
    }
</table>
<a class="btn btn-success" href="/Author/YazarEkle/">Yeni Yazar</a>
